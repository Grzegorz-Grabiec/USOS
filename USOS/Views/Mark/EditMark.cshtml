@model USOS.Models.LessonStudentMarkView

@using (Html.BeginForm())
{
    <form asp-action="EditMark">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Edycja</h4>
        </div>
        <div class="modal-body form-horizontal">
            <div class="row">
                <div class="col-lg-12">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)
                    @Html.HiddenFor(model => model.LessonID)
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group col-lg-10">
                        <label asp-for="Username" class="control-label"> Student </label>
                        <input asp-for="Username" class="form-control" readonly />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-10">
                        <label asp-for="MarkID" class="control-label"> Ocena </label>
                        <select asp-for="MarkID" class="form-control" asp-items="@Model.Marks">Oceny</select>
                    </div>

                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button data-dismiss="modal" id="Cancel" class="btn btn-default" type="button">Zamknij</button>
            <button class="btn btn-success" id="Submit" type="submit">Zatwierdź</button>
        </div>
    </form>
}




@await Html.PartialAsync("_ValidationScriptsPartial")



