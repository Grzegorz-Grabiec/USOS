@model USOS.Models.NewsView

@using (Html.BeginForm())
{
    <form asp-action="EditNews">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Edit</h4>
        </div>
        <div class="modal-body form-horizontal">
            <div class="row">
                <div class="col-lg-12">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group col-lg-10">
                        <label asp-for="Header" class="control-label"></label>
                        @Html.EditorFor(model => model.Header, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Header, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-lg-10">
                        <label asp-for="Text" class="control-label"></label>
                        @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-lg-10">
                        <label asp-for="Date" class="control-label"></label>
                        <input value="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" readonly />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>


                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button data-dismiss="modal" id="Cancel" class="btn btn-default" type="button">Cancel</button>
            <button class="btn btn-success" id="Submit" type="submit">Submit</button>
        </div>
    </form>
}




@await Html.PartialAsync("_ValidationScriptsPartial")



