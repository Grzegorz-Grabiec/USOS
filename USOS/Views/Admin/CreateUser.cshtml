@model AdminUsersView

<form asp-action="CreateUser">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Dodaj użytkownika</h4>
    </div>
    <div class="modal-body form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group col-lg-10">
                    <label asp-for="UserName" class="control-label">Nazwa użytkownika</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-10">
                    <label asp-for="Password" class="control-label">Hasło</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-10">
                    <label asp-for="PhoneNumber" class="control-label">Numer Telefonu</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-10">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-10">
                    <label asp-for="Email" class="control-label">Imię</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-10">
                    <label asp-for="Email" class="control-label">Nazwisko</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-10">
                    <label>Rola</label>
                    @Html.ListBoxFor(m => m.Role, Model.Roles, new { @class = "form-control" })
                    @Html.ValidationMessageFor(i => i.Roles,
                        "", new { @class = "text-warning" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button data-dismiss="modal" id="Cancel" class="btn btn-default" type="button" data-target="User">Zamknij</button>
        <button class="btn btn-success" id="Submit" type="submit">Zatwierdź</button>
    </div>
</form>
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

