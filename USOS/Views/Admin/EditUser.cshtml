@model AdminUsersView

    <form asp-action="EditUser">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Edycja</h4>
        </div>
        <div class="modal-body form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserName" />
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group col-lg-10">
                        <label>Rola</label>
                        @Html.ListBoxFor(m => m.Role, Model.Roles,new { @class = "form-control" })
                        @Html.ValidationMessageFor(i => i.Roles,
                            "", new { @class = "text-warning" })
                    </div>
                    <div class="form-group col-lg-10">
                        <label asp-for="PhoneNumber" class="control-label">Numer telefonu</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-10">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button data-dismiss="modal" id="Cancel" class="btn btn-default" type="button">Zamknij</button>
            <button class="btn btn-success" id="Submit" type="submit">Zatwierdź</button>
        </div>
    </form>
@await Html.PartialAsync("_ValidationScriptsPartial")
